[
  {
    "description": "plain text",
    "input": "something",
    "output": [{ "type": "paragraph", "children": [{ "type": "text", "content": "something" }] }]
  },
  {
    "description": "emphasis",
    "input": "this is **something**",
    "output": [
      {
        "type": "paragraph",
        "children": [
          { "type": "text", "content": "this is " },
          {
            "type": "emphasis",
            "delimiter": "**",
            "children": [{ "type": "text", "content": "something" }]
          }
        ]
      }
    ]
  },
  {
    "description": "list",
    "input": "* A\n* B\n* C",
    "output": [
      {
        "type": "list",
        "bullet": "*",
        "items": [
          [{ "type": "text", "content": "A" }],
          [{ "type": "text", "content": "B" }],
          [{ "type": "text", "content": "C" }]
        ]
      }
    ]
  },
  {
    "description": "emphasis not list",
    "input": "*hello*",
    "output": [
      {
        "type": "paragraph",
        "children": [
          {
            "type": "emphasis",
            "delimiter": "*",
            "children": [{ "type": "text", "content": "hello" }]
          }
        ]
      }
    ]
  },
  {
    "description": "list not emphasis",
    "input": "* hello*",
    "output": [
      {
        "type": "list",
        "bullet": "*",
        "items": [[{ "type": "text", "content": "hello" }, { "type": "text", "content": "*" }]]
      }
    ]
  },
  {
    "description": "emphasis with escaped delimiter",
    "input": "*\\**",
    "output": [
      {
        "type": "paragraph",
        "children": [
          {
            "type": "emphasis",
            "delimiter": "*",
            "children": [{ "type": "text", "content": "*" }]
          }
        ]
      }
    ]
  },
  {
    "description": "emphasis with escaped delimiter",
    "input": "**\\****",
    "output": [
      {
        "type": "paragraph",
        "children": [
          {
            "type": "emphasis",
            "delimiter": "**",
            "children": [{ "type": "text", "content": "*" }, { "type": "text", "content": "*" }]
          }
        ]
      }
    ]
  },
  {
    "description": "code block",
    "input": "```this is code```",
    "output": [{ "type": "codeBlock", "content": "this is code" }]
  },
  {
    "description": "code block with escaped ```",
    "input": "```code\\```code```",
    "output": [{ "type": "codeBlock", "content": "code```code" }]
  },
  {
    "description": "code block with escaped \\```",
    "input": "```code\\\\```code```",
    "output": [{ "type": "codeBlock", "content": "code\\```code" }]
  },
  {
    "description": "lists with 2 items",
    "input": "* A\n* B",
    "output": [
      {
        "type": "list",
        "bullet": "*",
        "items": [[{ "type": "text", "content": "A" }], [{ "type": "text", "content": "B" }]]
      }
    ]
  },
  {
    "description": "lists with 2 bullets",
    "input": "* A\n- B",
    "output": [
      {
        "type": "list",
        "bullet": "*",
        "items": [[{ "type": "text", "content": "A" }]]
      },
      {
        "type": "list",
        "bullet": "-",
        "items": [[{ "type": "text", "content": "B" }]]
      }
    ]
  },
  {
    "description": "image",
    "input": "![alt](src \"title\")",
    "output": [
      {
        "type": "paragraph",
        "children": [{ "type": "image", "alt": "alt", "title": "title", "src": "src" }]
      }
    ]
  },
  {
    "description": "math",
    "input": "$1+1$",
    "output": [
      {
        "type": "paragraph",
        "children": [{ "type": "math", "delimiter": "$$", "content": "1+1" }]
      }
    ]
  },
  {
    "description": "math",
    "input": "$$1+1$$",
    "output": [{ "type": "math", "delimiter": "$$$$", "content": "1+1" }]
  }
]
