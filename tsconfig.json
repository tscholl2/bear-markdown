{
  "compilerOptions": {
    "charset": "uft8",
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*",
    "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}